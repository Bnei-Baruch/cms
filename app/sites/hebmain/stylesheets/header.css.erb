/******** GENERAL *********************/
body {
	direction: rtl;
	unicode-bidi: bidi-override;
}
a, a:visited{
	color:#186BE5;
	text-decoration:none;
}
a:hover{
	text-decoration:underline;
}
#yui-main {
	/*background: transparent url(<%= domain %>/images/<%= @site_name %>/page-bg.gif) repeat-y 0 0;*/
}
.left {
	float:left;
}
.right {
	float:right;
}
strong{
	font-weight:bold;
}

/***********  HEADER  ****************/
#hd {
	position: relative;
	height:80px;
	font-size: 108%;
	margin:0 0 0 7px;
}
/*----------  Logo  ---------------*/
#hd .logo {
	position: absolute;
	top:-8px;
	right:0;
	width:150px;
	height:120px;
}
#hd .logo h1{
	position: absolute;
	top:-100px;
	right:0;
}
/*----------  Search  ---------------*/
#hd .search {
	position: absolute;
	top:15px;
	left:0;
	width:300px;
	height:15px;
}
#hd .search span{
	padding-left:10px;
	font-weight:bold;
}
#hd .search input{
	height:16px;
	width:191px;
}
#hd .search *{
	float:left;
}
/*----------  Links  ---------------*/
#hd ul.links {
	position: absolute;
	top:15px;
	left:300px;
	height:15px;
	margin: 0;
	padding: 0;
}
#hd ul.links li {
	float: left;
	margin-right: 14px;
	list-style-image: url(<%= domain %>/images/<%= @site_name %>/link.gif);
	list-style-position: inside;
}
