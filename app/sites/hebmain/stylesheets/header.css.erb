/******** GENERAL *********************/
body {
	direction: rtl;
	unicode-bidi: bidi-override;
}
a, a:visited{
	color:#186BE5;
	text-decoration:none;
}
a:hover{
	text-decoration:underline;
}
#yui-main {
	/*background: transparent url(<%= domain %>/images/<%= @site_name %>/page-bg.gif) repeat-y 0 0;*/
}
.left {
	float:left;
}
.right {
	float:right;
}
strong{
	font-weight:bold;
}
/***********  HEADER  ****************/
#hd {
	position: relative;
	height:80px;
	font-size: 108%;
	margin:0 0 0 7px;
}
#hd-r {
	position: relative;
	height:80px;
	font-size: 108%;
	margin:0;
}
/*----------  Logo  ---------------*/
#hd-r .logo {
	position: absolute;
	top:-8px;
	right:0;
	width:150px;
	height:120px;
}
#hd-r .logo h1{
	position: absolute;
	top:-100px;
	right:0;
}
/*----------  Search  ---------------*/
#hd .search {
	position: absolute;
	top:15px;
	left:0;
	width:300px;
	height:15px;
}
#hd .search span{
	padding-left:10px;
	font-weight:bold;
}
#hd .search input{
	height:16px;
	width:191px;
}
#hd .search *{
	float:left;
}
/*----------  Links  ---------------*/
#hd ul.links {
	position: absolute;
	top:15px;
	right:0;
	height:15px;
	margin: 0;
	padding: 0;
}
#hd ul.links li {
	float: left;
	margin-left: 14px;
	list-style:none;
	list-style-position: inside;
}
#hd ul.links li a {
  background: white url(<%= domain %>/images/<%= @site_name %>/link.gif) no-repeat right center;
}
/*----------  Menu  ---------------*/
#bd .menu {
	font-size:116%;
	font-weight: bold;
	background: white url(<%= domain %>/images/<%= @site_name %>/menu-bg.gif) repeat-x left -62px;
  position:relative;
  height:31px;
  width:100%;
	margin: 0 0 25px;
}
#bd .menu ul {
  position:absolute;
  top:0;
  right:0;
  width:100%;
	height:31px;
	line-height:21px;
	padding: 3px 0 0; 
	margin: 0;
}
#bd .menu .first {
  position:absolute;
  top:0;
  right:0;
  height:31px;
  width:4px;
	background: white url(<%= domain %>/images/<%= @site_name %>/menu-bg.gif) no-repeat right 0;
}
#bd .menu .last {
  position:absolute;
  top:0;
  left:0;
  height:31px;
  width:4px;
	background: white url(<%= domain %>/images/<%= @site_name %>/menu-bg.gif) no-repeat right -31px;
}
#bd .menu ul li {
	float: right;
	list-style-type: none;
	list-style-position: inside;
	padding: 2px 15px;
	margin:0;
}
#bd .menu ul li.divider{
	color:#838383;
	margin: 0;
	padding: 0;
}
#bd .menu ul li.selected{
	background-color:#EAF0FC;
}
#bd .menu img{
  *vertical-align:middle;
}





