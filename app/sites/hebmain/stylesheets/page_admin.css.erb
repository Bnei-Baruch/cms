/*----------  Action Buttons  ---------------*/
.action_buttons{
	float: right;
	position: absolute;
	right: 0;
	z-index:100;
}
.top{
	top:0;
}
.bottom{
	bottom:0;
}
.action_buttons a{
	display:block;
	float:right;
	margin:0 0 0 3px;
	padding: 0 3px;
	opacity:.3;-moz-opacity:.3;filter:alpha(opacity=30);
	font-weight:bold;
	color:black;
}
.action_buttons a:hover{
	opacity:1;-moz-opacity:1;filter:alpha(opacity=100);
	text-decoration:none;
}
.action_buttons a.new_button{
	background-color: lightgreen;
	border: 2px solid green;
}
.action_buttons a.edit_button{
	background-color: lightblue;
	border: 2px solid blue;
}
.action_buttons a.delete_button{
	background-color: #EF9595;
	border: 2px solid red;
}
.action_buttons form{
	opacity:.4;-moz-opacity:.4;filter:alpha(opacity=40);
	background-color: lightgreen;
	
}
.action_buttons form select{
	float:right;
}
.action_buttons form a{
	opacity:.4;-moz-opacity:.4;filter:alpha(opacity=40);
}
.action_buttons form a:hover{
	opacity:1;-moz-opacity:1;filter:alpha(opacity=100);
}

/*----------  Drop Zone  ---------------*/
.drop-zone{
  position:absolute;
  top:0;
  left:0;
  padding:0;
  margin:0;
  background-color:silver;
  z-index:100;
}
.drop-zone .x-panel-body{
  overflow:hidden !important;
}
