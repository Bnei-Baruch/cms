/*----------  Tree  ---------------*/
.x-tree {
  text-align: right;
  padding:0;
}
.x-tree-node-icon {
  display:none;
}
.x-tree-arrows .x-tree-elbow-plus {
background:transparent url(/ext/resources/images/default/tree/arrows_rtl.gif) no-repeat scroll 0pt;
}
.x-tree-arrows .x-tree-elbow-minus {
background:transparent url(/ext/resources/images/default/tree/arrows_rtl.gif) no-repeat scroll -16px 0pt;
}
.x-tree-arrows .x-tree-elbow-end-plus {
background:transparent url(/ext/resources/images/default/tree/arrows_rtl.gif) no-repeat scroll 0pt 50%;
}
.x-tree-arrows .x-tree-elbow-end-minus {
background:transparent url(/ext/resources/images/default/tree/arrows_rtl.gif) no-repeat scroll -16px 0pt;
}
.x-tree-arrows .x-tree-elbow-end, .x-tree-arrows .x-tree-elbow {
background:transparent url(/ext/resources/images/default/tree/arrows_rtl.gif) no-repeat scroll -64px 0pt;
}
/*----------  Action Buttons  ---------------*/
.button-menu{
background:transparent url(/images/menu.gif) no-repeat scroll 0 0 !important;
}
.span_admin table{
display:inline;
}
.x-btn-right,.x-btn-center,.x-btn-left{
border:0 none;
}
.x-menu a.x-menu-item{
padding:3px 0 3px 3px;
}
.x-menu-item-icon{
margin:0;
}
.x-menu li {
text-align:right;
}
.highlight{
  background-color:#ffffef !important;
}
/*----------  Drop Zone  ---------------*/
.drop-zone{
  position:absolute;
  top:0;
  left:0;
  padding:0;
  margin:0;
  background-color:silver;
  z-index:100;
}
.drop-zone .x-panel-body{
  overflow:hidden !important;
}
