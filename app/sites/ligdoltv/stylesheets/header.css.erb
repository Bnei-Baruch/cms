/******** GENERAL *********************/
body {
	direction: rtl;
	unicode-bidi: bidi-override;
}
a, a:visited{
	color:#186BE5;
	text-decoration:none;
}
a:hover{
	text-decoration:underline;
}
#yui-main {
	/*background: transparent url(<%= domain %>/images/<%= @site_name %>/page-bg.gif) repeat-y 0 0;*/
}
.left {
	float:left;
}
.right {
	float:right;
}
strong{
	font-weight:bold;
}
/***********  HEADER  ****************/
.dynamic_tree {
right:0;
top:0;
position:fixed;
z-index:1000;
}
#hd {
	position: relative;
	height:80px;
	font-size: 108%;
	margin:0 0 0 7px;
}
#hd-r {
	position: relative;
	height:80px;
	font-size: 108%;
	margin:0;
}
/*----------  h1  ---------------*/
.h1{
	background-color:#0D47B2;
	color:white;
	text-align:right;
	font-size:153.9%;
	font-weight:bold;
	margin:0;
	height:39px;
	line-height:39px;
  position:relative;
  padding: 0 10px 0 0;
}
.h1 .h1-right,.h1 .h1-left{
	position:absolute;
  top:0;
  width:6px;
  height:39px;
}
.h1 .h1-right{
  right:0;
background: transparent url(<%= domain %>/images/<%= @site_name %>/h1-ears.gif) no-repeat 0 -39px;
}
.h1 .h1-left{
left:0;
background: transparent url(<%= domain %>/images/<%= @site_name %>/h1-ears.gif) no-repeat 0 0;  
}
/*----------  Logo  ---------------*/
#hd-r .logo {
	position: absolute;
	top:15px;
	right:0;
}
#hd-r .logo h1{
	position: absolute;
	top:-1000px;
	right:0;
}
/*----------  Search  ---------------*/
#hd .search {
	position: absolute;
	top:15px;
	left:0;
	width:300px;
	height:15px;
}
#hd .search input{
	height:17px;
	width:160px;
  border:1px solid #b7b7b7;
  border-left:0 none;
  padding:0 2px;
  font-size:14px;
}
#hd .search *{
	float:left;
}
/*----------  Links  ---------------*/
#hd ul.links {
	position: absolute;
	top:15px;
	right:0;
	height:15px;
	margin: 0;
	padding: 0;
}
#hd ul.links li {
	float: left;
	margin-left: 14px;
	list-style:none;
	list-style-position: inside;
	position: relative;
}
/*----------  Footer  ---------------*/
#ft{
	position:relative;
}
#ft ul.links {
	top:15px;
	right:0;
	height:15px;
	margin: 30px 0;
	padding: 0;
	text-align:center;
	color:#186BE5;
}
#ft ul.links li {
	margin-left: 14px;
	list-style:none;
	list-style-position: inside;
	position: relative;
	z-index:100;
	display:inline;
}
/*----------  Menu  ---------------*/
#bd .menu {
	font-size:116%;
	font-weight: bold;
	background: white url(<%= domain %>/images/<%= @site_name %>/menu-bg.gif) repeat-x left -62px;
  position:relative;
  height:31px;
  width:100%;
	margin: 0 0 25px;
}
#bd .menu a {
color:black;
}
#bd .menu ul {
  position:absolute;
  top:0;
  right:0;
  width:100%;
	height:31px;
	line-height:21px;
	padding: 3px 0 0; 
	margin: 0;
}
#bd .menu .first {
  position:absolute;
  top:0;
  right:0;
  height:31px;
  width:4px;
	background: white url(<%= domain %>/images/<%= @site_name %>/menu-bg.gif) no-repeat right 0;
}
#bd .menu .last {
  position:absolute;
  top:0;
  left:0;
  height:31px;
  width:4px;
	background: white url(<%= domain %>/images/<%= @site_name %>/menu-bg.gif) no-repeat right -31px;
}
#bd .menu ul li {
	float: right;
	list-style-type: none;
	list-style-position: inside;
	padding: 2px 15px;
	margin:0;
}
#bd .menu ul li.divider{
	color:#838383;
	margin: 0;
	padding: 0;
}
#bd .menu ul li.selected{
	background-color:#EAF0FC;
}
#bd .menu img{
  *vertical-align:middle;
}
