<%= render :partial => "admin/share/tiny_mce_full" %>
<%= error_messages_for :block %>

<% form_for(:block, @block, :url => { :action => 'create' }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Content</b><br />
    <%= f.text_area(:content, :class => 'mce') %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

