<% @title = "Editing list" %>
<% form_for(:list, :url => list_path(@list), :html => {:method => 'put'}) do |f| %>
	<p>
		<%= render :partial => 'fields', :locals => {:f => f} %>
		<span id="submit"><%= submit_tag "Update List" %></span>
	</p>
<% end %>

<%= link_to 'Show', list_path(@list) %> |
<%= link_to 'Back', lists_path %>