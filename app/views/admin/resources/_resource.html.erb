<tr>
	<td><%=h resource.id %></td>
	<td><%=h resource.name %></td>
	<td><%=h resource.resource_type.name unless resource.resource_type_id.blank? %></td>
	<td><%= link_to 'Show', admin_resource_path(resource) %></td>
	<td><%= link_to 'Edit', edit_admin_resource_path(resource) %></td>
	<td><%= link_to 'Destroy', admin_resource_path(resource), :confirm => 'Are you sure?', :method => :delete %></td>
</tr>