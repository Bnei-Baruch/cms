<% @title = "Listing URL Migrations" %>

<%= link_to 'New URL Migration', new_admin_url_migration_path %>
<br /><br />
<table border="1">
<thead>
  <tr>
    <th>Source</th>
    <th>Target</th>
    <th>Action</th>
    <th>State</th>
    <th colspan="3">Actions</th>
  </tr>
</thead>


<% for url_migration in @url_migrations %>
  <tr>
    <td><%=h url_migration.source %></td>
    <td><%=h url_migration.target %></td>
    <td><%=h url_migration.action %></td>
    <td><%=h url_migration.state %></td>
    <td><%= link_to 'Edit', edit_admin_url_migration_path(url_migration) %></td>
    <td><%= link_to 'Destroy', admin_url_migration_path(url_migration), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br /><br />
<%= link_to 'New URL Migration', new_admin_url_migration_path %>

