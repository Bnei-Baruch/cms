<% @title = "Listing URL Migrations" %>

<%= link_to 'New URL Migration', new_admin_url_migration_path %>
<br /><br />

<% for url_migration in @url_migrations %>
    <%=h url_migration.source %><br /> 
    <%=h url_migration.target %><br />
    <%=h url_migration.action %><br /> 
    <%=h url_migration.state %><br />
    <%= link_to 'Edit', edit_admin_url_migration_path(url_migration) %><br />
    <%= link_to 'Destroy', admin_url_migration_path(url_migration), :confirm => 'Are you sure?', :method => :delete %>
<br /><br /> 
<% end %>

<br /><br />
<%= link_to 'New URL Migration', new_admin_url_migration_path %>

