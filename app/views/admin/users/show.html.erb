<% @title = "User" %>

<p>
  <b>User ID:</b>
  <%=h @user.id %>
</p>

<p>
  <b>User name:</b>
  <%=h @user.username %>
</p>

<p>
  <b>Banned reson:</b>
  <%=h @user.reason_of_ban %>
</p>

<p>
  <b>Groups:</b>
  <table>
  <% for group in @groups %>
    <tr>
        <td><%=h group.groupname %></td>
    </tr>
  <% end %>
  </table>
</p>

<%= link_to 'Edit', edit_admin_user_path(@user) %> |
<%= link_to 'Back', admin_users_path %>
