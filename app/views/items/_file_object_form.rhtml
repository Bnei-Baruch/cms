<%= error_messages_for :item %>

<% form_for(:item, :url => path, :html => {:method => method}) do |f| %>

	<%= f.hidden_field(:object_type_id) %>
	<%= f.hidden_field(:type) %>
	<%= render :partial => "share/name_field" %>
	<%= f.text_area(:text) %>
  <%= render :partial => "rule_labels" %>
  <%= render :partial => "free_labels" %>

  <p>
    <%= submit_tag button_text %>
  </p>
<% end %>
