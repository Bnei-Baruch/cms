<h1>Listing languages</h1>

<table>
  <tr>
  </tr>
  
<% for language in @languages %>
  <tr>
    <td><%= link_to 'Show', language_path(language) %></td>
    <td><%= link_to 'Edit', edit_language_path(language) %></td>
    <td><%= link_to 'Destroy', language_path(language), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New language', new_language_path %>