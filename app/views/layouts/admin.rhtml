<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<meta http-equiv="content-type" content="text/html;charset=utf-8" />
		<meta http-equiv="Content-language" content="utf8" /> 
		<title><%= @title %></title>
		<%= javascript_include_tag :defaults, 'lowpro' %>
		<%= javascript_include_tiny_mce %>
		<%= javascript_include_tag 'tiny_mce' %>
		<%= tiny_mce %>
		<%= calendar_date_select_includes nil %>
		<%= stylesheet_link_tag 'reset-fonts-grids' %>
		<%= stylesheet_link_tag 'admin' %>
	</head>
	<body>
		<div id="doc3" class="yui-t2">
			<div id="hd">
				<%= link_to(image_tag("/images/cms_logo_small.gif"), '/') %>
				<h1><%= @title %></h1>
				<% if flash[:notice] %>
					<p class="notice"><%= flash[:notice] %></p>
				<% end %>
			</div>
			<div id="bd">
				<div id="yui-main">
					<div class="yui-b"><div class="yui-g">
							<%= yield :submenu %>
							<div id="content">
								<%= yield %>
							</div>
							
						</div>
					</div>
				</div>
				<div class="yui-b">
					<div id="menu">
						<h2 class="menu">Main Menu</h2>
						<ul>
							<li><%= link_to 'Websites', websites_path %></li>	 
							<li><%= link_to 'Resource Types', resource_types_path %></li>	 
							<li><%= link_to 'Resources', resources_path %></li>	 
							<li><%= link_to 'Properties', properties_path %></li>	 
							<li><%= link_to 'Lists', lists_path %></li>	 
						</ul>
					</div>
					
				</div>
				
			</div>
			<div id="ft"></div>
		</div>
	</body>
</html>