<div class="property">
	<% fields_for "resource_type[my_properties][]", property do |f| %>
		<table>
			<thead>
				<th class="label">Local Name</th>
				<th class="label">Property</th>
			</thead>
			<tr>
				<td><%= f.text_field :local_name, :index => nil%></td>
				<td>
					<% if property.new_record? %>
						<%= f.select :property_id, Property.properties_for_select,{} , :index => nil %>
					<% else -%>
						<%= "#{property.property.name} [#{property.property.field_type}]" if property.property %>
						<%= f.hidden_field :property_id, :index => nil%>
					<% end %>
				</td>
				<td>
					<% if property.new_record? %>
						<%= link_to_function image_tag("delete.gif"), 
							"this.up('.property').remove()" %>
					<% else %>	
						<%= link_to_function image_tag("delete.gif"), "mark_for_destroy(this)" %>
						<%= f.hidden_field :id, :index => nil%>
						<%= f.hidden_field :should_destroy, :index => nil, :class => 'should_destroy' %>
					<% end %>
				</td>
			</tr>
		</table>
	<% end %>
</div>
